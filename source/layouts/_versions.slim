div.versions
- currents = current_projects()
- version_number = current_version(data.page.project || $default_project)
- version_sub = version_number.gsub '.', '_'
- if version_number != currents[data.page.project][:deployment]
  div(id="alert-version" class="alert-version")
    div.arrow-left
    div.alert-version-message
      - if version_number < currents[data.page.project][:deployment]
        h4 == I18n.t(:alert_version_title_older)
      - else
        h4 == I18n.t(:alert_version_title_unreleased)
      p
        - current_url = (data.page.project || $default_project) + '/' + currents[data.page.project][:deployment] + current_page.url
        a href="http://docs.basho.com/#{current_url}"  == I18n.t(:alert_version_link_text)
        span.extra-alert-text == I18n.t(:alert_version_text)

    - version_code = 'I18n.t(:"version_icons.basic.v_' + version_sub + '")'
    div.version-icon-alert-version-num == eval(version_code)
    meta(itemprop="version" content==version_number)
    div.clear